@page
@model Proyecto.Pages.EntregasPages.VerDocModel
@{
    ViewData["Title"] = "VerDoc";
}


<dd class="col-sm-30 container">
    <embed style="width: 100%; height: 850px;" asp-for="" type="application/pdf" src="~/Documento/@Html.DisplayFor(model => model.Entrega.NombreArchivo)" />
</dd>


@section Scripts{

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript">
function PreviewImage() {
            pdffile = document.getElementById("uploadPDF").files[0];
            pdffile_url = URL.createObjectURL(pdffile);
            $('#viewer').attr('src', pdffile_url);
        }</script>

}

