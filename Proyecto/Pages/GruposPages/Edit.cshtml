@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-full">
    <!-- Nav -->
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container margin-left-nav">
            <div class="row">
                <div class="col-md-2">
                    <!-- Navbar brand (Brainiac) y botón colapsable -->
                    <div class="navbar-header">
                        <button class="navbar-toggle" type="button" data-toggle="collapse"
                                data-target="#navbar-main">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="index.html">Brand</a>
                    </div>
                </div>

                <div class="col-md-10">
                    <div class="navbar-collapse collapse" id="navbar-main">
                        <!-- Navbar botones -->
                        <ul class="nav navbar-nav horizontal mar-left">
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a></li>
                            <li><a href="miembros.html">¿Quiénes somos?</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>

<section class="container-full">
    <!-- Main page -->
    <div class="row" id="full-page">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="profile-sidebar">
                <!-- User picture -->
                <div class="profile-userpic">
                    <img src="img/antonio_jose_camacho.png" class="img-responsive border" alt="foto">
                </div>
                <!-- Sidebar title -->
                <div class="profile-user">

                </div>
                <!-- Sidebar menu -->
                <nav class="profile-menu">
                    <ul class="nav navbar vertical">

                        @if (Model.V_tema)
                        {
                            <li>
                                <a asp-page="./TemaPages/Index">Temas</a>
                            </li>
                        }
                        @if (Model.V_estudiante)
                        {
                            <li>
                                <a asp-page="./EstudiantesPages/Index">Estudiantes </a>
                            </li>
                        }
                        @if (Model.V_asesor)
                        {
                            <li>
                                <a asp-page="./DocentesPages/Index">Asesores</a>
                            </li>
                        }
                        @if (Model.V_grupo)
                        {
                            <li>
                                <a asp-page="./GruposPages/Index">Grupos</a>
                            </li>
                        }
                        @if (Model.V_integracion)
                        {
                            <li>
                                <a asp-page="./IntegracionPages/Index">Integracion</a>
                            </li>
                        }

                        <div class="col-md-2" style=" top: 300px; left: 56px; width: 19px;">
                            <li>
                                <form asp-page="/Logout" method="post">
                                    <button class="btn btn-danger" type="submit">Salir</button>
                                </form>
                            </li>
                        </div>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>

<div class="arriba">
    <div class="caja-registro">
        <h1 class="text-center">Editar Grupo</h1>
        <div class="container" style="position: relative; width: 50%; margin-top:10%">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Grupo.Id" />
                <div class="form-group">
                    <label asp-for="Grupo.TemaId" class="control-label"></label>
                    <select asp-for="Grupo.TemaId" class="form-control" asp-items="ViewBag.TemaId"></select>
                    <span asp-validation-for="Grupo.TemaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grupo.Estudiante1" class="control-label"></label>
                    <input asp-for="Grupo.Estudiante1" class="form-control" />
                    <span asp-validation-for="Grupo.Estudiante1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grupo.Estudiante2" class="control-label"></label>
                    <input asp-for="Grupo.Estudiante2" class="form-control" />
                    <span asp-validation-for="Grupo.Estudiante2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grupo.Estudiante3" class="control-label"></label>
                    <input asp-for="Grupo.Estudiante3" class="form-control" />
                    <span asp-validation-for="Grupo.Estudiante3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Grupo.DocenteId" class="control-label"></label>
                    <select asp-for="Grupo.DocenteId" class="form-control" asp-items="ViewBag.DocenteId"></select>
                    <span asp-validation-for="Grupo.DocenteId" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Grupo.Active" /> @Html.DisplayNameFor(model => model.Grupo.Active)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="boton" style="top: 91%;">
            <a class="btn btn-danger" asp-page="Index">Cancelar</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
