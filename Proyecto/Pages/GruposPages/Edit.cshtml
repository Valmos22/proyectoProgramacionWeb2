@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grupo.Id" />
            <div class="form-group">
                <label asp-for="Grupo.TemaId" class="control-label"></label>
                <select asp-for="Grupo.TemaId" class="form-control" asp-items="ViewBag.TemaId"></select>
                <span asp-validation-for="Grupo.TemaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grupo.Estudiante1" class="control-label"></label>
                <input asp-for="Grupo.Estudiante1" class="form-control" />
                <span asp-validation-for="Grupo.Estudiante1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grupo.Estudiante2" class="control-label"></label>
                <input asp-for="Grupo.Estudiante2" class="form-control" />
                <span asp-validation-for="Grupo.Estudiante2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grupo.Estudiante3" class="control-label"></label>
                <input asp-for="Grupo.Estudiante3" class="form-control" />
                <span asp-validation-for="Grupo.Estudiante3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grupo.DocenteId" class="control-label"></label>
                <select asp-for="Grupo.DocenteId" class="form-control" asp-items="ViewBag.DocenteId"></select>
                <span asp-validation-for="Grupo.DocenteId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Grupo.Active" /> @Html.DisplayNameFor(model => model.Grupo.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
