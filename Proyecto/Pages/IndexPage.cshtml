        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="profile-sidebar">

                <!-- User picture -->
                <div class="profile-userpic">
                    <img src="/wwwroot/Documento/IMG_20200421_163531_056.jpg" class="img-responsive img-circle border" alt="foto">
                </div>

                <!-- Sidebar title -->
                <div class="profile-user">
                    <div class="profile-name">User</div>
                </div>

                <!-- Sidebar menu -->
                <nav class="profile-menu">
                    <ul class="nav navbar vertical">


                        <li>
                            <a href="#"><i class="glyphicon glyphicon-user"></i> Perfil</a>
                        </li>


                        @if (Model.V_tema)
                        {
                            <li>
                                <a asp-page="./TemaPages/Index">Crud Temas</a>
                            </li>
                        }
                        @if (Model.V_estudiante)
                        {
                            <li>
                                <a asp-page="./EstudiantesPages/Index">Crud Estudiantes </a>
                            </li>
                        }
                        @if (Model.V_asesor)
                        {
                            <li>
                                <a asp-page="./DocentesPages/Index">Crud Asesores</a>
                            </li>
                        }
                        @if (Model.V_grupo)
                        {
                            <li>
                                <a asp-page="./GruposPages/Index">Crud Grupos</a>
                            </li>
                        }
                        @if (Model.V_integracion)
                        {
                            <li>
                                <a asp-page="./IntegracionPages/Index">Integracion</a>
                            </li>
                        }

                        <li>
                            <form asp-page="/Logout" method="post">
                                <button class="nav-link text-dark"  type="submit">Salir</button>
                            </form>
                        </li>

                    </ul>
                </nav>
            </div>
        </div>

        <!-- Content -->
        <div class="col-md-10">

        </div>
    </div>
